<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="0dp"
    android:layout_marginTop="@dimen/search_margin"
    >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:weightSum="4"
           >
    <LinearLayout
        android:id="@+id/line1"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
           <TextView
               android:id="@+id/ccompany"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/customer_textview_height"
               android:gravity="center_vertical"
               android:textSize="@dimen/search_text_size"
               android:textColor="@color/shallowblack"
               android:text="名称:丝绵"
               android:layout_weight="1"
               />
        <include layout="@layout/bottom_line"></include>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
           <TextView
               android:id="@+id/cname"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/customer_textview_height"
               android:gravity="center_vertical"
               android:textSize="@dimen/search_text_size"
               android:textColor="@color/shallowblack"
               android:text="编号：sdsdfas"
               android:layout_weight="1"
               />

        <include layout="@layout/bottom_line"></include>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
           <TextView
               android:id="@+id/cphone"
               android:layout_marginLeft="@dimen/search_margin"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/customer_textview_height"
               android:gravity="center_vertical"
               android:textSize="@dimen/search_text_size"
               android:textColor="@color/shallowblack"
               android:text="电话"
               android:layout_weight="1"
               />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/shallowgrey"
            >
        </View>
    </LinearLayout>

       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/customer_textview_height"
               android:gravity="center_vertical"
               android:layout_weight="1"
                android:weightSum="4"
               android:orientation="horizontal">
         <RelativeLayout
             android:id="@+id/dengji"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             >
             <LinearLayout
                 android:layout_centerInParent="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 >
                 <ImageView
                     android:layout_width="@dimen/customer_image_size"
                     android:layout_height="@dimen/customer_image_size"
                     android:src="@drawable/icon_dengji"
                     android:scaleType="centerInside"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/customer_button_text_size"
                     android:layout_marginLeft="@dimen/customer_button_margin_width"
                     android:text="登记"
                     />
             </LinearLayout>

             <include layout="@layout/right_line"></include>
         </RelativeLayout>
           <RelativeLayout
               android:id="@+id/dengjijilu"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <LinearLayout
                   android:layout_centerInParent="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="@dimen/customer_image_size"
                       android:layout_height="@dimen/customer_image_size"
                       android:src="@drawable/icon_dengjijilu"
                       android:scaleType="centerInside"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/customer_button_margin_width"
                       android:textSize="@dimen/customer_button_text_size"
                       android:text="登记记录"
                       />
               </LinearLayout>
               <include layout="@layout/right_line"></include>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/guihuan"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               >
               <LinearLayout
                   android:layout_centerInParent="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >
               <ImageView
                   android:layout_width="@dimen/customer_image_size"
                   android:layout_height="@dimen/customer_image_size"
                   android:src="@drawable/icon_dengji"
                   android:scaleType="centerInside"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/customer_button_margin_width"
                   android:textSize="@dimen/customer_button_text_size"
                   android:text="归还"
                   />
               </LinearLayout>
               <include layout="@layout/right_line"></include>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/bianji"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:gravity="center"
               android:layout_weight="1"
               >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="@dimen/customer_image_size"
                       android:layout_height="@dimen/customer_image_size"
                       android:src="@drawable/icon_bianji"
                       android:scaleType="centerInside"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/customer_button_margin_width"
                       android:textSize="@dimen/customer_button_text_size"
                       android:text="编辑"
                       />
               </LinearLayout>
           </RelativeLayout>



           </LinearLayout>
       </LinearLayout>
</android.support.v7.widget.CardView>