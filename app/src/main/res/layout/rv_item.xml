<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item"
    card_view:cardElevation="0dp"
    android:layout_marginTop="@dimen/search_margin"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/gname"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/search_text_height"
                android:gravity="center_vertical"
                android:textColor="@color/shallowblack"
                android:textSize="@dimen/search_text_size"
                android:text="名称:丝绵"
                />
            <include layout="@layout/bottom_line"></include>

        </LinearLayout>


       <LinearLayout
           android:layout_below="@+id/line1"
           android:layout_marginLeft="@dimen/search_margin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <TextView
               android:id="@+id/gid"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/search_text_height"
               android:gravity="center_vertical"
               android:textColor="@color/shallowblack"
               android:textSize="@dimen/search_text_size"
               android:text="编号：sdsdfas"
               />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <TextView
               android:id="@+id/gform"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/search_text_height"
               android:gravity="center_vertical"
               android:textColor="@color/shallowblack"
               android:textSize="@dimen/search_text_size"
               android:text="成分：ggfds"
               />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <TextView
               android:id="@+id/gweight"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/search_text_height"
               android:gravity="center_vertical"
               android:textColor="@color/shallowblack"
               android:textSize="@dimen/search_text_size"
               android:text="克重：20Kg"
               />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <TextView
               android:id="@+id/glenght"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/search_text_height"
               android:gravity="center_vertical"
               android:textColor="@color/shallowblack"
               android:textSize="@dimen/search_text_size"
               android:text="成品门副"
               />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="@dimen/search_text_height"
               android:gravity="center_vertical"
               android:textColor="@color/shallowblack"
               android:textSize="@dimen/search_text_size"
               android:text="价格："
               />
               <TextView
                   android:id="@+id/gprice"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/search_text_height"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/search_text_size"
                   android:textColor="#D60000"
                   android:text="￥1.20"
                   />
           </LinearLayout>
       </LinearLayout>
        <ImageView
            android:id="@+id/qcimage"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:scaleType="centerInside"
            android:layout_width="@dimen/search_qrcode_size"



            android:layout_height="@dimen/search_qrcode_size"
            android:src="@drawable/qrcode"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>