<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    android:id="@+id/cv_item"
    android:layout_marginTop="@dimen/search_margin"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/line1"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/gname"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/customer_record_item_textview_height"
                android:textSize="@dimen/search_text_size"
                android:gravity="center_vertical"
                android:textColor="@color/shallowblack"
                android:text="名称:丝绵"
                />
            <include layout="@layout/bottom_line"></include>
            <TextView
                android:id="@+id/gid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/customer_record_item_textview_height"
                android:textSize="@dimen/search_text_size"
                android:gravity="center_vertical"
                android:textColor="@color/shallowblack"
                android:text="编号：sdsdfas"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_below="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/rbtime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/customer_record_item_textview_height"
            android:textSize="@dimen/search_text_size"
            android:gravity="center_vertical"
            android:textColor="@color/shallowblack"
            android:text="借出时间"
            />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_below="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/cname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/customer_record_item_textview_height"
            android:textSize="@dimen/search_text_size"
            android:gravity="center_vertical"
            android:textColor="@color/shallowblack"
            android:text="交接人："
            />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line5"
            android:layout_below="@+id/line4"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/rstate"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_record_item_textview_height"
            android:textSize="@dimen/search_text_size"
            android:gravity="center_vertical"
            android:textColor="@color/shallowblack"
            android:text="状态"
            />
            <include layout="@layout/bottom_line"></include>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line6"
            android:layout_below="@+id/line5"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            >
        <Button
            android:id="@+id/revertbutton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:background="@drawable/corners_rectangle"
            android:textSize="@dimen/search_text_size"
            android:gravity="center"
            android:textColor="@color/shallowblack"
            android:text="归还登记"
            />
        </RelativeLayout>

        <ImageView
            android:id="@+id/qcimage"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_width="@dimen/search_qrcode_size"
            android:layout_height="@dimen/search_qrcode_size"
            android:src="@drawable/qrcode"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>