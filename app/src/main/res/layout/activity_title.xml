<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorTitle"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:paddingLeft="@dimen/search_margin"
        android:paddingRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/title_leftline"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
        <ImageView
            android:id="@+id/title_leftIco"
            android:scaleType="centerInside"
            android:layout_width="@dimen/title_lefticon_width"
            android:layout_height="@dimen/title_lefticon_height"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/title_text"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/title_rightline"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            >
        <ImageView
            android:id="@+id/title_rightIco"
            android:layout_width="@dimen/title_icon"
            android:layout_height="@dimen/title_icon" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>